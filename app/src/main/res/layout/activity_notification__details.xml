<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.ellipsoidecm.carfix.activity.Notification_Details">





    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/ticket_image"
        android:layout_margin="25dp"/>
        <!--android:background="@drawable/carfix_bg"-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/lin"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="40dp">


        <TextView
            android:id="@+id/OE_name"

            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginLeft="25dp"
            android:text="O.E" />

        <TextView

            android:id="@+id/OE_value"
            android:layout_width="90dp"
            android:textAlignment="center"
            android:background="@color/border"
            android:layout_height="50dp"
            android:inputType="none"
            android:layout_marginLeft="20dp"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="40dp">


        <TextView
            android:layout_width="100dp"
            android:id="@+id/Brand_name"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginLeft="25dp"
            android:text="Branded" />

        <TextView
            android:layout_width="90dp"
            android:id="@+id/Brand_value"
            android:layout_height="match_parent"
            android:inputType="none"
            android:textAlignment="center"
            android:background="@color/border"
            android:layout_marginLeft="20dp"/>





    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="40dp">


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/Local_name"
            android:textSize="15sp"
            android:layout_marginLeft="25dp"
            android:text="Local" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/Local_value"
            android:textAlignment="center"
            android:background="@color/border"
            android:inputType="none"
            android:layout_marginLeft="20dp"/>





    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:id="@+id/Used_name"
            android:layout_marginLeft="25dp"
            android:text="Used" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/Used_value"
            android:background="@color/border"
            android:textAlignment="center"
            android:inputType="none"
            android:layout_marginLeft="20dp"/>






    </LinearLayout>


        </LinearLayout>


    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <CheckBox
        android:layout_width="40dp"
        android:id="@+id/OE_box"
        android:onClick="checkBoxSelection"
        android:layout_marginBottom="20dp"
        android:layout_height="40dp" />

    <CheckBox
        android:layout_width="40dp"
        android:id="@+id/Brand_box"
        android:onClick="checkBoxSelection"
        android:layout_marginBottom="20dp"
        android:layout_height="40dp" />

    <CheckBox
        android:layout_width="40dp"
        android:id="@+id/Local_box"
        android:onClick="checkBoxSelection"
        android:layout_marginBottom="20dp"
        android:layout_height="40dp" />
    <CheckBox
        android:layout_width="40dp"
        android:id="@+id/Used_box"
        android:onClick="checkBoxSelection"

        android:layout_height="40dp" />

    </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <Button
            android:text="Reject"
            android:layout_width="100dp"
            android:textColor="@color/white"

            android:layout_marginLeft="70dp"
            android:id="@+id/reject_proc"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton" />


        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/accept_proc"
            android:layout_marginEnd="70dp"

            android:layout_alignParentEnd="true"
            android:background="@drawable/mybutton4"
            android:text="Pay" />

    </RelativeLayout>





</LinearLayout>
