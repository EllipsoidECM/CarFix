<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/milkywhite"
    tools:context="com.ellipsoidecm.carfix.fragment.Language">

    <ImageView
        android:id="@+id/lang"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_translation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tvlang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App Languages"
        android:textAlignment="center"
        android:textSize="21dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/lang"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/eng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvlang"
        android:background="@color/mustard"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textSize="18dp"
        android:text="English"/>
    <Button
        android:id="@+id/tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eng"
        android:background="@color/mustard"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="@string/telugu"
        android:textSize="21dp"/>
    <Button
        android:id="@+id/urd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tel"
        android:background="@color/mustard"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="@string/urdu"
        android:textSize="21dp"/>

</RelativeLayout>
